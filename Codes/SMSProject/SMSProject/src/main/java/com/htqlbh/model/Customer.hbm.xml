<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.htqlbh.model.Customer" table="customer" >
        <id name="custId" type="string">
            <column name="CUSTID" length="20" />
            <generator class="assigned" />
        </id>
        <property name="custName" type="string">
            <column name="CUSTNAME" length="50" />
        </property>
        <property name="address" type="string">
            <column name="ADDRESS" length="50" />
        </property>
        <property name="phone" type="string">
            <column name="PHONE" length="20" />
        </property>
        <property name="fax" type="string">
            <column name="FAX" length="20" />
        </property>
        <property name="email" type="string">
            <column name="EMAIL" length="50" />
        </property>
        <property name="overDue" type="java.lang.Integer">
            <column name="OVERDUE" />
        </property>
        <property name="amount" type="java.lang.Long">
            <column name="AMOUNT" precision="13" scale="0" />
        </property>
        <property name="overDueAmt" type="java.lang.Long">
            <column name="OVERDUEAMT" precision="13" scale="0" />
        </property>
        <property name="dueAmt" type="java.lang.Long">
            <column name="DUEAMT" precision="13" scale="0" />
        </property>
        <property name="status" type="string">
            <column name="STATUS" length="2" />
        </property>
        <property name="description" type="string">
            <column name="DESCRIPTION" length="200" />
        </property>
        <set name="salesOrders" table="salesorder" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="CUSTID" length="20" />
            </key>
            <one-to-many class="com.htqlbh.model.SalesOrder" />
        </set>
        <set name="payments" table="payment" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="CUSTID" length="20" />
            </key>
            <one-to-many class="com.htqlbh.model.Payment" />
        </set>
    </class>
</hibernate-mapping>
