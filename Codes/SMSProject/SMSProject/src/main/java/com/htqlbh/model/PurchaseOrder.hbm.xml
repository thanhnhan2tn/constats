<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.htqlbh.model.PurchaseOrder" table="purchaseorder" >
        <id name="orderNo" type="string">
            <column name="ORDERNO" length="20" />
            <generator class="assigned" />
        </id>
        <many-to-one name="vendor" class="com.htqlbh.model.Vendor" fetch="select">
            <column name="VENDORID" length="20" />
        </many-to-one>
        <property name="orderDate" type="date">
            <column name="ORDERDATE" length="10" />
        </property>
        <property name="orderType" type="string">
            <column name="ORDERTYPE" length="2" />
        </property>
        <property name="overDueDate" type="date">
            <column name="OVERDUEDATE" length="10" />
        </property>
        <property name="discAmt" type="java.lang.Long">
            <column name="DISCAMT" precision="10" scale="0" />
        </property>
        <property name="promAmt" type="java.lang.Long">
            <column name="PROMAMT" precision="10" scale="0" />
        </property>
        <property name="comAmt" type="java.lang.Long">
            <column name="COMAMT" precision="10" scale="0" />
        </property>
        <property name="taxAmt" type="java.lang.Long">
            <column name="TAXAMT" precision="10" scale="0" />
        </property>
        <property name="totalAmt" type="java.lang.Long">
            <column name="TOTALAMT" precision="10" scale="0" />
        </property>
        <set name="purchaseOrdDetails" table="purchaseorddetail" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="ORDERNO" length="20" />
            </key>
            <one-to-many class="com.htqlbh.model.PurchaseOrdDetail" />
        </set>
    </class>
</hibernate-mapping>
