<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.htqlbh.model.Vendor" table="vendor" >
        <id name="vendorId" type="string">
            <column name="VENDORID" length="20" />
            <generator class="assigned" />
        </id>
        <property name="vendorName" type="string">
            <column name="VENDORNAME" length="50" />
        </property>
        <property name="address" type="string">
            <column name="ADDRESS" length="50" />
        </property>
        <property name="email" type="string">
            <column name="EMAIL" length="50" />
        </property>
        <property name="phone" type="string">
            <column name="PHONE" length="20" />
        </property>
        <property name="fax" type="string">
            <column name="FAX" length="20" />
        </property>
        <property name="dueAmt" type="java.lang.Long">
            <column name="DUEAMT" precision="13" scale="0" />
        </property>
        <property name="amount" type="java.lang.Long">
            <column name="AMOUNT" precision="13" scale="0" />
        </property>
        <property name="overDueAmt" type="java.lang.Long">
            <column name="OVERDUEAMT" precision="13" scale="0" />
        </property>
        <property name="status" type="string">
            <column name="STATUS" length="2" />
        </property>
        <property name="description" type="string">
            <column name="DESCRIPTION" length="200" />
        </property>
        <set name="purchaseOrders" table="purchaseorder" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="VENDORID" length="20" />
            </key>
            <one-to-many class="com.htqlbh.model.PurchaseOrder" />
        </set>
        <set name="distributorPayments" table="distributorpayment" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="VENDORID" length="20" />
            </key>
            <one-to-many class="com.htqlbh.model.DistributorPayment" />
        </set>
    </class>
</hibernate-mapping>
