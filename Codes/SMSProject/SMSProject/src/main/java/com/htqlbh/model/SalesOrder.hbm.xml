<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.htqlbh.model.SalesOrder" table="salesorder" >
        <id name="orderNo" type="string">
            <column name="ORDERNO" length="20" />
            <generator class="assigned" />
        </id>
        <many-to-one name="customer" class="com.htqlbh.model.Customer" fetch="select" lazy="false">
            <column name="CUSTID" length="20" />
        </many-to-one>
        <many-to-one name="invoiceType" class="com.htqlbh.model.InvoiceType" fetch="select">
            <column name="INVOICETYPE" length="2" />
        </many-to-one>
        <property name="orderDate" type="date">
            <column name="ORDERDATE" length="10" />
        </property>
        <property name="overDueDate" type="date">
            <column name="OVERDUEDATE" length="10" />
        </property>
        <property name="orderDisc" type="java.lang.Long">
            <column name="ORDERDISC" precision="10" scale="0" />
        </property>
        <property name="taxAmt" type="java.lang.Long">
            <column name="TAXAMT" precision="10" scale="0" />
        </property>
        <property name="totalAmt" type="java.lang.Long">
            <column name="TOTALAMT" precision="10" scale="0" />
        </property>
        <property name="payment" type="java.lang.Long">
            <column name="PAYMENT" precision="10" scale="0" />
        </property>
        <property name="debt" type="java.lang.Long">
            <column name="DEBT" precision="10" scale="0" />
        </property>
        <property name="description" type="string">
            <column name="DESCRIPTION" length="200" />
        </property>
        <set name="slsOrderDetails" table="slsorderdetail" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="ORDERNO" length="20" />
            </key>
            <one-to-many class="com.htqlbh.model.SlsOrderDetail" />
        </set>
    </class>
</hibernate-mapping>
