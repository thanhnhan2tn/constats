<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.htqlbh.model.InventoryVoucher" table="inventoryvoucher">
        <id name="iVoucherNo" type="string">
            <column name="IVOUCHERNO" length="20" />
            <generator class="assigned" />
        </id>
        <many-to-one name="salesPerson" class="com.htqlbh.model.SalesPerson" fetch="select">
            <column name="SALESPERSONID" length="20" />
        </many-to-one>
        <many-to-one name="unit" class="com.htqlbh.model.Unit" fetch="select">
            <column name="UNITID" />
        </many-to-one>
        <property name="iVoucherDate" type="date">
            <column name="IVOUCHERDATE" length="10" />
        </property>
        <property name="iVoucherType" type="string">
            <column name="IVOUCHERTYPE" length="2" />
        </property>
        <set name="inventoryVoucherDetails" table="inventoryVoucherDetail" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="IVOUCHERNO" length="20" />
            </key>
            <one-to-many class="com.htqlbh.model.InventoryVoucherDetail" />
        </set>
    </class>
</hibernate-mapping>
