<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.htqlbh.model.PurchaseOrdDetail" table="purchaseorddetail" >
        <id name="id" type="java.lang.Integer">
            <column name="ID" />
            <generator class="identity" />
        </id>
        <many-to-one name="stock" class="com.htqlbh.model.Stock" fetch="select">
            <column name="STOCKID" length="20" />
        </many-to-one>
        <many-to-one name="purchaseOrder" class="com.htqlbh.model.PurchaseOrder" fetch="select">
            <column name="ORDERNO" length="20" />
        </many-to-one>
        <many-to-one name="inventory" class="com.htqlbh.model.Inventory" fetch="select">
            <column name="INVTID" length="20" />
        </many-to-one>
        <property name="qty" type="java.lang.Integer">
            <column name="QTY" />
        </property>
        <property name="purchasePrice" type="java.lang.Long">
            <column name="PURCHASEPRICE" precision="10" scale="0" />
        </property>
        <property name="qtyProm" type="java.lang.Integer">
            <column name="QTYPROM" />
        </property>
        <property name="qtyPromAmt" type="java.lang.Long">
            <column name="QTYPROMAMT" precision="10" scale="0" />
        </property>
        <property name="amtProm" type="java.lang.Integer">
            <column name="AMTPROM" />
        </property>
        <property name="taxAmt" type="java.lang.Long">
            <column name="TAXAMT" precision="10" scale="0" />
        </property>
        <property name="amount" type="java.lang.Long">
            <column name="AMOUNT" precision="10" scale="0" />
        </property>
    </class>
</hibernate-mapping>
