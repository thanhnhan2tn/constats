<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.htqlbh.model.SalesPerson" table="salesperson" >
        <id name="salesPersonId" type="string">
            <column name="SALESPERSONID" length="20" />
            <generator class="assigned" />
        </id>
        <property name="salesPersonName" type="string">
            <column name="SALESPERSONNAME" length="50" />
        </property>
        <property name="address" type="string">
            <column name="ADDRESS" length="50" />
        </property>
        <property name="overDue" type="java.lang.Integer">
            <column name="OVERDUE" />
        </property>
        <property name="status" type="string">
            <column name="STATUS" length="20" />
        </property>
        <property name="description" type="string">
            <column name="DESCRIPTION" length="200" />
        </property>
        <set name="inventoryVouchers" table="inventoryvoucher" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="SALESPERSONID" length="20" />
            </key>
            <one-to-many class="com.htqlbh.model.InventoryVoucher" />
        </set>
        <set name="payments" table="payment" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="SALESPERSONID" length="20" />
            </key>
            <one-to-many class="com.htqlbh.model.Payment" />
        </set>
    </class>
</hibernate-mapping>
